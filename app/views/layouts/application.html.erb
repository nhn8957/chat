<!DOCTYPE html>
<html>
  <head>
    <title>Chat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <div class = "container">

  <body>
  	<nav class="navbar navbar-light bg-faded">
  <a class="navbar-brand" href="#">nCHAT</a>
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <%= link_to "Home", root_path, class: 'nav-link' %>
    </li>
  <% if current_user %>
    <li class="nav-item">
      <%= link_to 'View Profile', user_path(current_user.id), method: 'get', class: 'nav-link' %>
    </li>
    <li class="nav-item">
    <%= link_to "Log out #{current_user.email}", logout_path, method: 'delete', class: 'nav-link' %>
    </li>

  <% else %>
    <li class="nav-item">
      <%= link_to "Create an account", new_user_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to "Login", new_session_path, class: 'nav-link' %>	
    </li>


  <% end %>

  </ul>
  
</nav>
    <% unless flash.empty? %>
      <% flash.each do |key, value| %>
        <div class="alert alert-warning"><%=value %></div>
      <% end %>
    <% end %>  


    <div class="Container">
      <%= yield %>
    </div>
  </body>


  </div>


</html>
