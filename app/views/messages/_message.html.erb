<div class="card">
  <div class="card-block">
    <h3 class="card-title">
    	From: <%= message.sender_name %>	
    </h3>
	<%if message.read_at == nil %> 
		<p class="card-text">Body: <%= message.body %></p>
	<% else %>
		<p class="card-text">You can only view this message once (which you have!)</p>
	<% end %>
 	<p class="card-text"><small class="text-muted">Sent: <%= message.created_at %></small></p>
	<% message.mark_as_read! %>
  </div>
</div>