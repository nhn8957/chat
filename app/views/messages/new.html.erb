<h1>New message</h1>

<div class="form-group">
<%= form_for @message do |message| %>
	
		<select name="message[recipient_id]">
		  <option selected disabled>
		  	Select a friend
		  </option>

		  <% @friends.each do |friend| %>
		  	<option value="<%= friend.id %>"><%= friend.name %></option>
		  <% end %>
		</select>
	
	<br>
	<%= message.label :body %>
	<%= message.text_field :body, class: 'form-control' %><br>
	<%= message.submit "Send", class: 'btn btn-success'%>
<% end %>
</div>