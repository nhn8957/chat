<h1>Create an account</h1>

<%= form_for @user do |f| %>

<% unless @user.errors.empty? %>
<%= @user.errors.full_messages.to_sentence %>
<% end %>

<div class="form-group">

<%= f.label :name %>
<%= f.text_field :name, placeholder: "Enter name", class: 'form-control'%>		 

<%= f.label :email %>
<%= f.text_field :email, placeholder: "Enter email", class: 'form-control' %>	

<%= f.label :password %>
<%= f.password_field :password, placeholder: "Enter password", class: 'form-control' %>	<br>

<%= f.submit "Create account", class: 'btn btn-success'%>

</div>
<% end %>

<form action="/users" method="post">

</form>